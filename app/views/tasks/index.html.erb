<h1>Task List</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, show_task_path(task) %><br>
      <%= task.details %><br>
      <%= task.completed ? "Completed" : "Not completed" %>
      <%= link_to 'Edit', edit_task_path(task) %> |
      <%= link_to 'Delete', tasks_path(task), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>

<%= link_to 'New Task', new_task_path, class: 'btn btn-success' %>
